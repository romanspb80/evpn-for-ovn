# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.define "ryu" do |ryu|
    ryu.vm.box = "focal-server-cloudimg-amd64-vagrant"
    devstack.vm.box_url = "https://cloud-images.ubuntu.com/focal/current/focal-server-cloudimg-amd64-vagrant.box"
    ryu.vm.network "private_network", ip: "192.168.10.10", nic_type: "virtio"
    ryu.vm.hostname = "ryu"
    ssh_pub_key = File.readlines("#{Dir.home}/.ssh/id_rsa.pub").first.strip
    ryu.vm.provision 'shell', inline: 'mkdir -p /root/.ssh'
    ryu.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /root/.ssh/authorized_keys"
    ryu.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /home/vagrant/.ssh/authorized_keys", privileged: false
    ryu.vm.provider "virtualbox" do |virtualbox|
      virtualbox.memory = "2048"
      virtualbox.cpus = 1
      virtualbox.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
    ryu.vm.provision "ansible" do |ansible|
      ansible.playbook = "install-ryu-mn.yml"
    end
  end
  
  config.vm.define "devstack" do |devstack|
    devstack.vm.box = "focal-server-cloudimg-amd64-vagrant"
    devstack.vm.box_url = "https://cloud-images.ubuntu.com/focal/current/focal-server-cloudimg-amd64-vagrant.box"
    #devstack.vm.box = "ubuntu/focal64"
    devstack.vm.network "private_network", ip: "192.168.10.20", nic_type: "virtio"  
    ssh_pub_key = File.readlines("#{Dir.home}/.ssh/id_rsa.pub").first.strip
    devstack.vm.provision 'shell', inline: 'mkdir -p /root/.ssh'
    devstack.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /root/.ssh/authorized_keys"
    devstack.vm.provision 'shell', inline: "echo #{ssh_pub_key} >> /home/vagrant/.ssh/authorized_keys", privileged: false
    devstack.vm.provider "virtualbox" do |virtualbox|
      virtualbox.memory = 8192
      virtualbox.cpus = 2
      virtualbox.customize ["modifyvm", :id, "--nested-hw-virt", "on"]
      virtualbox.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    end
    devstack.vm.provision "ansible" do |ansible|
      ansible.playbook = "install-devstack.yml"
    end
  end
end
